
@{

    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
    string cLayout = "";
    if (controller == "Home")
    {
        cLayout = " ~/Views/Shared/_LayoutMusicE.cshtml";
    }
    else if(controller == "Musicos")
    {
        cLayout = "~/Views/Shared/_LayoutMusicos.cshtml";
    }
    else if(controller == "Empresas")
    {
        cLayout = "~/Views/Shared/_LayoutEmpresas.cshtml";
    }
    else
    {
        cLayout = "~/Views/Shared/_MusicE.cshtml";
    }

    Layout = cLayout;
}