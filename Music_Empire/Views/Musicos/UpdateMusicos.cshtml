        </div>

        <div class="form-group">
            <label>Nome</label>
            <input class="form-control" placeholder="Nome do Musico" type="text" id="nomeMusico" name="nomeMusico" value="@Model.nomeMusico" />
        </div>

        <div class="form-group">
            <label>Endereço</label>
            <input class="form-control" placeholder="Endereço do Musico" type="text" id="enderecoMusico" name="enderecoMusico" value="@Model.enderecoMusico"/>
        </div>

